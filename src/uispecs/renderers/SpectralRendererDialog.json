// #package uispecs

// #section SpectralRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Extinction:",
      "children": [
        {
          "type": "spinner",
          "bind": "extinction",
          "logarithmic": true,
          "value": 1,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Scattering albedo:",
      "children": [
        {
          "type": "slider",
          "bind": "albedo",
          "value": 0.5,
          "min": 0,
          "max": 1,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Scattering bias:",
      "children": [
        {
          "type": "slider",
          "bind": "bias",
          "value": 0,
          "min": -1,
          "max": 1,
          "step": 0.2
        }
      ]
    },
    {
      "type": "field",
      "label": "Majorant ratio:",
      "children": [
        {
          "type": "slider",
          "bind": "ratio",
          "value": 1,
          "min": 0,
          "max": 1,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Max bounces:",
      "children": [
        {
          "type": "spinner",
          "bind": "bounces",
          "value": 8,
          "min": 0
        }
      ]
    },
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 8,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "n:",
      "children": [
        {
          "type": "spinner",
          "bind": "n",
          "value": 16,
          "min": 8,
          "step": 4
        }
      ]
    },
    {
      "type": "field",
      "label": "temperature [K]:",
      "children": [
        {
          "type": "spinner",
          "bind": "temperature",
          "value": 5000,
          "min": 1,
          "step": 1
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "panel",
          "bind": "tfcontainer"
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Absorption",
      "children": [
        {
          "type": "panel",
          "bind": "acontainer"
        }
      ]
    }
  ]
}